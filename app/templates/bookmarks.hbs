<div class="content-area cell large-5 large-cell-block-y xxlarge-4 bookmarks">
  {{#if (await bookmarksSettled)}}

    {{#each-in (group-by 'recordType.content' model) as |key values|}}
      {{#if (eq key 'lot')}}
        <h3>Tax Lots</h3>
        <ul class="no-bullet">
          {{#each values as |lot|}} 
            <li class="lot-bookmark">
              <span class="icon tax-lot"></span> 
                {{#link-to 'lot' lot.bookmark}}
                  {{lot.bookmark.address}}
                  <span class="dark-gray">
                    {{lot.bookmark.bbl}}
                  </span>
                {{/link-to}}
              <button class="float-right lu-red delete-bookmark-button" {{action 'deleteBookmark' lot}}>
                &times;
              </button>
            </li>
          {{/each}}
        </ul>
      {{else if (eq key 'zma')}}
        <h3>Zoning Map Amendments</h3>
        <ul class="no-bullet">
          {{#each values as |zma|}} 
            <li class="zma-bookmark">
              {{#link-to 'zma' zma.bookmark.id}}
                <span class="icon polygon"></span> 
                {{zma.bookmark.project_na}}
                <span class="dark-gray">{{zma.bookmark.lucats}}</span>
              {{/link-to}}
              <button class="float-right lu-red delete-bookmark-button" {{action 'deleteBookmark' zma}}>&times;</button>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <h3>Map Pins</h3>
        <ul class="no-bullet">
          {{#each values as |pin|}} 
            <li {{action 'flyTo' pin.coordinates}} class="map-bookmark">
              {{fa-icon "map-pin"}} {{pin.address}} 
              <button class="float-right lu-red delete-bookmark-button" {{action 'deleteBookmark' pin}}>&times;</button>
            </li>
          {{/each}}
        </ul>
      {{/if}}

    {{/each-in}}
  {{/if}}

  {{#unless model.length}}
    <div class="no-bookmarks">
      <h1>You haven't bookmarked anything.</h1>
      <p>You can add bookmarks to this page by clicking the [fa-bookmark] icon on other pages &mdash; like Lots and Zoning Map Amendments. From this page you can quickly navigate to all of your bookmarked information.</p>
    </div>
  {{/unless}}

  {{outlet}}

</div>
