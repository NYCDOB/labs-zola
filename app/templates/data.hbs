<div class="content-area cell large-5 large-cell-block-y xxlarge-4">
  <h1>Data Sources</h1>

  {{log 'model' model}}

  <ul>
  {{#each model as |layerGroup|}}
    <li>
      <h2 class="header-medium no-margin">{{layerGroup.title}}</h2>
      <p>
        {{#if layerGroup.meta.description}}
          <span style="display:block;" class="dark-gray"><strong>{{layerGroup.meta.description}}</strong></span>
        {{/if}}
        {{#if layerGroup.meta.url}}
          <span style="display:block;" class="no-margin"><a href="{{layerGroup.meta.url}}" target="_blank">{{fa-icon 'external-link'}} {{layerGroup.meta.url}}</a></span>
        {{/if}}
        {{#if layerGroup.meta.updated_at}}
          <span style="display:block;" class="dark-gray text-small">Updated {{layerGroup.meta.updated_at}}</span>
        {{/if}}
      </p>
    </li>
  {{/each}}
  </ul>

  {{outlet}}

</div>
