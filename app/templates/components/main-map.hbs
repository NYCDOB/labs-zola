n{{#if loading}}
  <div class="spinner">
    <div class="double-bounce1"></div>
    <div class="double-bounce2"></div>
  </div>
{{/if}}

{{#mapbox-gl
  id='main-map'
  initOptions=(hash style='mapbox://styles/mapbox/light-v9'
                    zoom=zoom
                    center=(array lng lat))
  mapLoaded=(action 'handleMapLoad')
  as |map|}}

  {{#ember-wormhole to=menuTo}}
    <ul class='layers-list no-bullet'>
      {{map.layer-group config=layerGroups.sp qps=qps}}
      {{map.layer-group config=layerGroups.spsd qps=qps}}
      {{map.layer-group config=layerGroups.mih qps=qps}}
      {{map.layer-group config=layerGroups.ih qps=qps}}
      {{map.layer-group config=layerGroups.tz qps=qps}}
      {{map.layer-group config=layerGroups.fresh qps=qps}}
      {{map.layer-group config=layerGroups.sidewalkcafes qps=qps}}
      {{map.layer-group config=layerGroups.ldgma qps=qps}}
      {{map.layer-group config=layerGroups.czb qps=qps}}
      {{map.layer-group config=layerGroups.wap qps=qps}}
      {{map.layer-group config=layerGroups.sceniclandmarks qps=qps}}
      {{map.layer-group config=layerGroups.historicdistricts qps=qps}}
      {{map.layer-group config=layerGroups.landmarkpoints qps=qps}}
      {{map.layer-group
        tagName='li'
        classNames='layer-group clearfix'
        config=layerGroups.pluto
        qps=qps}}

      {{#map.layer-group
        config=layerGroups.zd
        tagName='li'
        classNames='layer-group clearfix'
        qps=qps as |group|}}

        {{layer-menu-item
            title=layerGroups.zd.title
            visible=group.visible
            click=group.toggleVisibility}}

        {{#if group.visible}}
          {{#group.multi-select-control
            column='primaryzone' as |multiSelect|}}
            {{#power-select-multiple
              options=(await
                  (get-unique-options-for 'primaryzone' layerGroups.zd.sql)
                )
              selected=multiSelect.allChecked
              placeholder="Select Zones"
              onchange=(queue
                  (action group.updateSql 'buildMultiSelectSQL' 'primaryzone')
                  (action (mut multiSelect.allChecked))
                )
              as |name|
            }}
              {{name}}
            {{/power-select-multiple}}
          {{/group.multi-select-control}}
        {{/if}}
      {{/map.layer-group}}

      {{map.layer-group
        config=layerGroups.aerials16
        tagName='li'
        classNames='layer-group clearfix'
        qps=qps}}

      {{#map.layer-group
        config=layerGroups.co
        tagName='li'
        classNames='layer-group clearfix'
        qps=qps as |group|}}

        {{layer-menu-item
            title=layerGroups.co.title
            visible=group.visible
            click=group.toggleVisibility}}

        {{#if group.visible}}
          {{#group.multi-select-control
            column='overlay' as |multiSelect|}}
              <ul>
                <li>
                  {{group-checkbox
                    refs=(array 'c14' 'c24' 'c22' 'c13' 'c23')
                    values=(array c14 c24 c22 c13 c23)
                    scope=this}}
                </li>
                <li>
                  {{multiSelect.checkbox
                      value='C1-4'
                      checked=c14}} C1-4
                </li>
                <li>
                  {{multiSelect.checkbox
                      value='C2-4'
                      checked=c24}} C2-4
                </li>
                <li>
                  {{multiSelect.checkbox
                      value='C2-2'
                      checked=c22}} C2-2
                </li>
                <li>
                  {{multiSelect.checkbox
                      value='C1-3'
                      checked=c13}} C1-3
                </li>
                <li>
                  {{multiSelect.checkbox
                      value='C2-3'
                      checked=c23}} C2-3
                </li>
              </ul>
          {{/group.multi-select-control}}
        {{/if}}
      {{/map.layer-group}}

      {{#map.layer-group
        config=layerGroups.zma
        tagName='li'
        classNames='layer-group clearfix'
        qps=qps as |group|}}

        {{layer-menu-item
            title=layerGroups.zma.title
            visible=group.visible
            click=group.toggleVisibility}}

        {{#if group.visible}}
          {{group.timeline-control
              column='effective'
              query-param='zma-effective'}}
        {{/if}}
      {{/map.layer-group}}
    </ul>
  {{/ember-wormhole}}

  {{#if zmaSourcePromise.last.isSuccessful}}
    {{#map.source
      sourceId='zma'
      options=zmaSource as |source|}}
      {{source.layer
        layer=zmaFillLayer
        before='waterway-label'}}
    {{/map.source}}
  {{/if}}

  {{#if highlightedLotFeatures}}
    {{#map.source
      sourceId='highlighted-lot'
      options=highlightedLotSource as |source|}}
      {{source.layer
        layer=highlightedLotLayer
        before='waterway-label'}}
    {{/map.source}}
  {{/if}}

  {{#if mainMap.selected}}
    {{#map.source
      sourceId='selected-lot'
      options=selectedLotSource as |source|}}
      {{source.layer
        layer=selectedLotLayer
        after='waterway-label'}}
    {{/map.source}}
  {{/if}}

  {{map.call 'fitBounds' mainMap.bounds fitBoundsOptions}}
  {{map.on 'click' (action routeToLot)}}
  {{map.on 'data' (action 'mapLoading')}}
  {{map.on 'mousemove' (action 'handleMouseover')}}
  {{map.on 'mouseout' (action 'handleMouseleave')}}

{{/mapbox-gl}}
