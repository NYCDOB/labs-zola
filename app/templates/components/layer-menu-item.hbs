{{#if layer}}
  <div class="layer-menu-item" {{action 'toggleVisibility'}}>
    <div class="switch tiny float-left">
      <input class="switch-input" type="checkbox" name="exampleSwitch" checked={{visible}}>
      <label class="switch-paddle" for="exampleSwitch">
        <span class="show-for-sr">Toggle Layer Group</span>
      </label>
    </div>
    {{title}}
  </div>
  {{yield (hash
    layer=layer
    updateSql=(action 'updateSql')
    multi-select=(component 'layer-multi-select-control' parentComponent=this.layer)
    range-slider=(component 'layer-control-timeline' parentComponent=this.layer)
    )}}
{{/if}}
