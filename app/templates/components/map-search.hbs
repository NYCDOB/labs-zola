{{input type='text' placeholder='Search...' value=searchTerms}}
{{#if searchTerms}}
  <button class="close-button" aria-label="Clear Search" type="button" {{action 'clear'}}>
    <span aria-hidden="true">&times;</span>
  </button>
{{/if}}
<ul class="search-results no-bullet{{if (await results) ' has-results' ''}}">
  {{#each (await results) as |result|}}
    {{#link-to 'lot' result.boro result.block result.lot tagName='li'}}
      {{to-title-case result.address}}
    {{/link-to}}
  {{/each}}
</ul>
{{#if (is-pending results)}}
  <div class="search-results--loading">Loading...</div>
{{/if}}
{{yield}}
