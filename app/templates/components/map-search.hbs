{{input type='text' placeholder='Search...' value=searchTerms}}
{{#if searchTerms}}
  <button class="close-button" aria-label="Clear Search" type="button" {{action 'clear'}}>
    <span aria-hidden="true">&times;</span>
  </button>
{{/if}}


<ul class="search-results no-bullet {{if resultsCount 'has-results'}}">
  {{#each (await results) as |result index|}}
    <li class="{{if (eq selected index) 'highlighted-result'}}" {{action 'goTo' result}}>
      {{#if (eq result.type 'lot')}}
        {{result.label}} (Lot)
      {{else}}
        {{result.label}} (Address)
      {{/if}}
    </li>
  {{/each}}
</ul>
{{#if (is-pending results)}}
  <div class="search-results--loading">Loading...</div>
{{/if}}

{{#if (and searchTerms (not resultsCount) (is-fulfilled results))}}
  <div class="search-results--loading">No Results Found</div>
{{/if}}
{{yield}}
